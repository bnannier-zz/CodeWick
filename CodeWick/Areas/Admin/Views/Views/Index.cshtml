@model IEnumerable<CodeWick.Models.View>
@using CodeWick.Models;
@using CodeWick.Helpers;
@using System.Web;

@{
    string layoutLocation = "/Admin/View.cshtml";
    if (System.IO.File.Exists(Path.Combine(System.Web.HttpContext.Current.Server.MapPath(@"~/Content")) + "/Themes/" + ((Theme)Session["theme"]).Abbreviation + "/Layouts" + layoutLocation)) {
        Layout = "~/Content/Themes/" + ((Theme)Session["theme"]).Abbreviation + "/Layouts" + layoutLocation;
    }else{
        Layout = "~/Content/Themes/" + ((Theme)Session["theme"]).Abbreviation + "/Layouts/Admin/_Admin.cshtml";
    }
    ViewBag.Title = ((Setting)Session["setting"]).SiteName + ": Admin View";
}

@section AddToHead{
    <link href="@Url.Content("~/Content/Themes/" + (((Theme)Session["theme"]).Abbreviation) + "/CSS/Admin/Admin.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Themes/" + (((Theme)Session["theme"]).Abbreviation) + "/CSS/Admin/WebGrid.css")" rel="stylesheet" type="text/css" />
}

@{
    var grid = new WebGrid(
        source: Model,
        defaultSort: "ViewName",
		rowsPerPage: 10);
}

<div id="admin">
    @if(Context.User.IsInRole("administrator")) {
    <div class="sidebar">@Html.Action("_Navigation", "Modules")</div>
    <div class="content">
        <fieldset>
			<legend>Views</legend>
			<div id="grid">
				@grid.GetHtml(
					tableStyle: "grid",
					headerStyle: "head",
					footerStyle: "foot",
					rowStyle: "row",
					alternatingRowStyle: "alt",
					columns: grid.Columns(
						grid.Column("ViewName", "View Name"),
						grid.Column(format: (item) => Html.ActionLink("Details", "Details", new { id = item.ViewId })),
						grid.Column(format: (item) => Html.ActionLink("Edit", "Edit", new { id = item.ViewId })),
						grid.Column(format: (item) => Html.ActionLink("Delete", "Delete", new { id = item.ViewId }))
					)
				)
            </div>
			@Html.ActionImage(Url.Content("~/Content/Themes/" + (((Theme)Session["theme"]).Abbreviation) + "/Images/btn_create.png"), "Create", "Create", "Views", null, null, new { @class = "editor-button" }, new { @class = "editor-image" })
	    </fieldset>
    </div>
    } else {
        <div>Administrator access required.</div>
    }
</div>
