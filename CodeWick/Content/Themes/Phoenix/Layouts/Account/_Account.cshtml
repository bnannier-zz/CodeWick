@using CodeWick.Models;
@using CodeWick.Helpers;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    <link href="@Url.Content("~/Content/Themes/" + (((Theme)Session["theme"]).Abbreviation) + "/CSS/Body.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Themes/" + (((Theme)Session["theme"]).Abbreviation) + "/CSS/Header.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Themes/" + (((Theme)Session["theme"]).Abbreviation) + "/CSS/Footer.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Themes/" + (((Theme)Session["theme"]).Abbreviation) + "/CSS/General.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Themes/" + (((Theme)Session["theme"]).Abbreviation) + "/CSS/Shared/_Content.css")" rel="stylesheet" type="text/css" />
    <link href="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.22/themes/blitzer/jquery-ui.css" rel="stylesheet" type="text/css" />
    
    @RenderSection("AddToHead", false)

    <script src="@Url.Content("~/Scripts/jquery-1.8.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.22.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
</head>
<body>
    <div class="site_dimension">
        <header>
            <div class="logo">@Html.ActionImage(Url.Content("~/Content/Themes/" + (((Theme)Session["theme"]).Abbreviation) + "/Images/logo.png"), (((Setting)Session["setting"]).SiteName), "index", "site", null, new { area = "", controller = "Site", action = "Index" }, new { @class = "" }, new { @class = "" })</div>
            <div class="navigation">
                @Html.ActionLink("Portfolio", "Category", "Site", new { id = "portfolio" }, null)
                @Html.ActionLink("About", "Category", "Site", new { id = "about" }, null)
                @Html.ActionLink("Contact", "Category", "Site", new { id = "contact" }, null)
            </div>
            <div class="body_partial"><div class="body_partial_gray"></div></div>
        </header>
        <section id="content">@RenderBody()</section>
    </div>
    <footer>
        <div class="site_dimension">
            <div class="bottom"></div>
            <div id="footer">@Html.Action("_Content", "Modules", new { id = "footer" })</div>
        </div>
    </footer>
</body>
</html>